<div class="container">
    <h1>Tra Cứu Biển Số Xe</h1>
    <input type="text" id="licensePlate" placeholder="Nhập biển số xe">
    <button onclick="checkLicensePlate()">Tra Cứu</button>
    <div class="result" id="result"></div>
</div>

<script>
    async function checkLicensePlate() {
        const licensePlate = document.getElementById('licensePlate').value;
        const resultDiv = document.getElementById('result');
        resultDiv.innerHTML = 'Đang xử lý...';

        try {
            const response = await fetch(`https://vietcheckcar.com/api/api.php?api_key=sfund&bsx=${licensePlate}&bypass_cache=0&loaixe=2&vip=0`);
            const data = await response.json();

            if (data.totalViolations > 0) {
                let violations = data.violations.map(v => {
                    return `<p><strong>Trạng thái:</strong> ${v.trang_thai}<br>
                             <strong>Biển kiểm sát:</strong> ${v.bien_kiem_sat}<br>
                             <strong>Thời gian vi phạm:</strong> ${v.thoi_gian_vi_pham}<br>
                             <strong>Địa điểm vi phạm:</strong> ${v.dia_diem_vi_pham}<br>
                             <strong>Hành vi vi phạm:</strong> ${v.hanh_vi_vi_pham}<br></p>`;
                }).join('');
                resultDiv.innerHTML = `<h2>Kết Quả:</h2>${violations}`;
            } else {
                resultDiv.innerHTML = `<h2>Không có lỗi vi phạm cho biển số: ${licensePlate}</h2>`;
            }
        } catch (error) {
            resultDiv.innerHTML = 'Có lỗi xảy ra, vui lòng thử lại sau.';
        }
    }
</script>

</body>
